@model HomeViewModel

@{
    ViewBag.Title = "Shop Acc Liên Quân";
}


<link href="~/pages/Home/Index/style.css" rel="stylesheet" />
<script src="~/pages/Home/Index/script.js"></script>



<div class="acc-container">
    @foreach (var item in Model.AccountsList)
    {
        <a class="acc-card" asp-action="GameAccountDetail" asp-route-accLoginName="@item.LoginName">
            <img class="acc-thumbnail" src="@(item.ImageUrls.Split('\n')[0])" />
            <div class="acc-info">
                <p class="acc-price"><span>@String.Format("{0:n0}", item.Price)<sup>đ</sup></span> • <span>@item.RankName</span></p>
                <table>
                    <tr>
                        <td>Tướng: @item.HeroesCount</td>
                        <td>Trang phục: @item.SkinsCount</td>
                    </tr>
                    <tr>
                        <td colspan="2"><img class="title-icon" src="https://www.clker.com/cliparts/n/n/Z/f/e/o/gold-coin-hi.png" />Vàng: @String.Format("{0:n0}", item.GoldsCount)</td>
                    </tr>
                </table>
            </div>
        </a>
    }
</div>




<div class="paging-container">
    <ul class="pagination" paging-model="@Model.PagingInfo" paging-action="Index"></ul>
</div>