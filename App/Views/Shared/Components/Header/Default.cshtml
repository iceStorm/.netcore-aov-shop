@model HeaderViewModel


<div id="header">

    <a id="logo" asp-controller="Home" asp-action="Index">
        <img src="~/logo.png" />
    </a>


    <ul id="category-menu">
        <li class="category-item">
            <a class="category-link" asp-controller="Home" asp-action="Index">
                <label>Trang Chủ</label>
            </a>
        </li>


        <input class="virtual-checkbox" type="checkbox" id="chb-rank" />
        <li class="category-item">
            <a class="category-link expandable" href="#">
                <label for="chb-rank">Mức Rank</label>
            </a>
            <ul class="sub-menu">
                <li class="sub-menu-item">
                    <ul class="sub-menu-item-column">
                        <li>Tân thủ</li>
                        <li><a href="">Đồng</a></li>
                        <li><a href="">Bạc</a></li>
                    </ul>
                    <ul class="sub-menu-item-column">
                        <li>Trung cấp</li>
                        <li><a href="">Vàng</a></li>
                        <li><a href="">Bạch Kim</a></li>
                        <li><a href="">Kim Cương</a></li>
                    </ul>
                    <ul class="sub-menu-item-column">
                        <li>Thành thạo</li>
                        <li><a href="">Tinh Anh</a></li>
                        <li><a href="">Cao Thủ</a></li>
                    </ul>
                </li>
            </ul>
        </li>

        <input class="virtual-checkbox" type="checkbox" id="chb-price" />
        <li class="category-item">
            <a class="category-link expandable" href="#">
                <label for="chb-price">Mệnh Giá</label>
            </a>
            <ul class="sub-menu">
                <li class="sub-menu-item">
                    <ul class="sub-menu-item-column">
                        <li>Rẻ</li>
                        <li><a href="">Dưới 50.000đ</a></li>
                        <li><a href="">Từ 50.000đ - 100.000đ</a></li>
                        <li><a href="">Từ 100.000đ - 200.000đ</a></li>
                        <li><a href="">Từ 200.000đ - 300.000đ</a></li>
                    </ul>
                    <ul class="sub-menu-item-column">
                        <li>Trung bình</li>
                        <li><a href="">Từ 300.000đ - 400.000đ</a></li>
                        <li><a href="">Từ 400.000đ - 500.000đ</a></li>
                        <li><a href="">Từ 500.000đ - 600.000đ</a></li>
                    </ul>
                    <ul class="sub-menu-item-column">
                        <li>Cao</li>
                        <li><a href="">Từ 600.000đ - 700.000đ</a></li>
                        <li><a href="">Từ 700.000đ - 800.000đ</a></li>
                        <li><a href="">Từ 800.000đ - 900.000đ</a></li>
                        <li><a href="">Từ 1.000.000đ</a></li>
                    </ul>
                </li>
            </ul>
        </li>
    </ul>


    <div id="right-side">
        
        @if (Model.User != null)
        {
            @await Html.PartialAsync("_UserArea", Model)
        }
        else
        {
            <a id="btn-login" asp-controller="Account" asp-action="Login">Đăng nhập</a>
        }
    </div>

</div>