@model GameAccount

@{ 
    ViewBag.Title = "Nhập Tài khoản";
}



<form asp-action="Import" id="import-form" autocomplete="off">

    <table align="center">
        <tr>
            <td colspan="3">
                <input type="text" class="form-control" asp-for="RankName" placeholder="Rank" readonly />
                <input type="number" min="0" class="form-control" asp-for="Price" placeholder="Price" readonly />
            </td>
        </tr>

        <tr>
            <td colspan="3">
                <input type="text" class="form-control" asp-for="LoginName" placeholder="Login Name" readonly />
                <input type="password" class="form-control" asp-for="Password" placeholder="Password" readonly />
            </td>
        </tr>

        <tr>
            <td><input type="number" min="0" class="form-control" asp-for="HeroesCount" placeholder="Heroes Count" readonly></td>
            <td><input type="number" min="0" class="form-control" asp-for="SkinsCount" placeholder="Skins Count" readonly /></td>
            <td><input type="number" min="0" class="form-control" asp-for="GoldsCount" placeholder="Golds Count" readonly /></td>
        </tr>

        <tr>
            <td colspan="3"><textarea rows="10" cols="100" class="form-control" asp-for="ImageUrls" placeholder="Image Urls" readonly></textarea></td>
        </tr>


        <tr>
            <td colspan="3">
                <input type="file" id="file" class="filepond" accept="image/jpeg, image/png" />
                <input type="submit" value="Add" />
            </td>
        </tr>
    </table>

</form>



<script src="~/libs/filepond/filepond-plugin-file-validate-type.min.js"></script>
<link href="https://unpkg.com/filepond/dist/filepond.css" rel="stylesheet">
<script src="https://unpkg.com/filepond/dist/filepond.js"></script>

<script src="~/pages/Admin/Import/script.js"></script>
<link href="~/pages/Admin/Import/style.css" rel="stylesheet" />